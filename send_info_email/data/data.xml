<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="attendance_email_template" model="mail.template">
        <field name="name">Attendance Notification</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="subject">Your attendance has been updated</field>
        <field name="email_from">{(user.email or 'noreply@example.com')}</field>
        <field name="email_to">${object.employee_id.work_email}</field>
    </record>
</odoo>


